<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.young1lin.mybatis.boost.integration.test.mapper.PermissionMapper">

    <resultMap id="PermissionResultMap"
        type="com.young1lin.mybatis.boost.integration.test.domain.Permission">
        <id property="id" column="id" />
        <result property="permissionName" column="permission_name" />
        <result property="resource" column="resource" />
        <result property="action" column="action" />
        <result property="type" column="type" />
        <result property="description" column="description" />
        <result property="status" column="status" />
        <result property="sortOrder" column="sort_order" />
        <result property="createTime" column="create_time" />
        <result property="updateTime" column="update_time" />
        <result property="version" column="version" />
    </resultMap>

    <sql id="BaseColumns">
        id, permission_name, resource, action, type, description, status,
        sort_order, create_time, update_time, version
    </sql>

    <select id="selectById" resultMap="PermissionResultMap">
        SELECT
        <include refid="BaseColumns" />
        FROM
        permission
        WHERE
        id = #{id}
    </select>

    <select id="listAll" resultMap="PermissionResultMap">
        SELECT
        <include refid="BaseColumns" />
        FROM
        permission
    </select>

</mapper>
